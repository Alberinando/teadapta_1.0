                android:onClick="toggleText3"
                android:src="@drawable/seta_para_baixo"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/textAdditional3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="@string/criar_movimentos_gestos_olhares_e_m_micas_em_brincadeiras_jogos_e_atividades_art_sticas"
            android:textColor="#000000"
            android:visibility="gone"
            tools:targetApi="o" />

        <LinearLayout
