<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#deebf7"
    tools:context=".anamnese"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#deebf7"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/anamnese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/anamnese"
            android:textColor="#000000"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desenvolvimento_integral_da_crian_a_a_crian_a_atualmente"
            android:textColor="#000000"
            android:textAlignment="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/usa_as_duas_m_os_indiscriminadamente"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black"
            app:boxStrokeErrorColor="@color/error_color"
            app:errorIconTint="@color/error_icon_color">

            <AutoCompleteTextView
                android:id="@+id/escolha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioDestro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:text="@string/destro"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorLink="@color/black"
                        tools:ignore="VisualLintButtonSize" />

                    <RadioButton
                        android:id="@+id/radioCanhoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="#000000"
                        android:text="@string/canhoto"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorLink="@color/black"
                        tools:ignore="VisualLintButtonSize" />
                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/observa_dificuldade_de_coordena_o_motora_no_seu_filho"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

        <AutoCompleteTextView
            android:id="@+id/escolha2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="none"
            android:text="@string/selecionar"
            android:textColor="#000000"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/azul"
            android:textColorLink="@color/black"
            android:textCursorDrawable="@color/azul"
            app:layout_constraintTop_toBottomOf="@+id/InputLayout"
            tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/cai_frequentemente"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

            <AutoCompleteTextView
                android:id="@+id/escolha3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/apanha_objetos_sem_dificuldades"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

            <AutoCompleteTextView
                android:id="@+id/escolha4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/imita_gestos_simples"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

            <AutoCompleteTextView
                android:id="@+id/escolha5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/arremessa_objetos_sem_dificuldade"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

            <AutoCompleteTextView
                android:id="@+id/escolha6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout7"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/segura_objetos_sem_dificuldade"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

            <AutoCompleteTextView
                android:id="@+id/escolha7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayout8"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/utiliza_formas_particulares_de_organiza_o_motora_tiques"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:boxStrokeColor="@color/black"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/editTextNome"
            app:startIconTint="@color/black">

            <AutoCompleteTextView
                android:id="@+id/escolha8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:text="@string/selecionar"
                android:textColor="#000000"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/azul"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@color/azul"
                app:layout_constraintTop_toBottomOf="@+id/InputLayout"
                tools:ignore="LabelFor,VisualLintTextFieldSize,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/voltar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:gravity="center|center_horizontal"
                android:onClick="Back"
                android:text="@string/voltar"
                tools:ignore="VisualLintButtonSize" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/proximo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:gravity="center|center_horizontal"
                android:onClick="submit"
                android:text="@string/pr_ximo"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>